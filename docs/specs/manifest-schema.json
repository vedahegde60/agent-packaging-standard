{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aps.dev/schema/manifest-0.1.json",
  "title": "APS Manifest v0.1",
  "type": "object",
  "required": ["aps_version", "id", "name", "version", "runtimes", "capabilities"],
  "properties": {
    "aps_version": { "type": "string", "const": "0.1" },
    "id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9._-]*(/[a-z0-9._-]+)?$" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[0-9A-Za-z.-]+)?$" },
    "summary": { "type": "string" },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": { "type": "array", "items": { "type": "string" } },
        "homepage": { "type": "string" },
        "repository": { "type": "string" },
        "license": { "type": "string" }
      },
      "additionalProperties": true
    },
    "runtimes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["kind", "entrypoint"],
        "properties": {
          "kind": { "type": "string", "enum": ["python"] },
          "entrypoint": {
            "oneOf": [
              { "type": "string", "minLength": 1 },
              { "type": "array", "items": { "type": "string" }, "minItems": 1 }
            ]
          },
          "env": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "capabilities": {
      "type": "object",
      "required": ["inputs", "outputs"],
      "properties": {
        "inputs": {
          "type": "object",
          "required": ["schema"],
          "properties": {
            "schema": { "type": "object" }
          }
        },
        "outputs": {
          "type": "object",
          "required": ["schema"],
          "properties": {
            "schema": { "type": "object" }
          }
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string" },
              "protocol": { "type": "string", "enum": ["mcp", "agp"] },
              "endpoint": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "policies": {
      "type": "object",
      "properties": {
        "network": {
          "type": "object",
          "properties": {
            "egress": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        },
        "filesystem": {
          "type": "string",
          "enum": ["read-only", "read-write"]
        },
        "secrets": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}

